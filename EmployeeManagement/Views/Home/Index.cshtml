@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
}


<div class="card-deck">
    @foreach(var employee in Model)
    {
        string photoPath = "~/images/" + (@employee.Photo??"noimage.jfif");
        <div style="width:300px; display:inline-block" class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            
            <img class="card-img-top" src=@photoPath asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                <a asp-controller="Home" asp-action="" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
@section StyleSheet{
    <link href="~/css/index.css" rel="stylesheet" />
}
